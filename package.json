{
    "name": "@btc-vision/walletconnect",
    "type": "module",
    "version": "1.9.17",
    "author": "impredmet",
    "description": "The OP_NET Wallet Connect library helps your dApp connect to any compatible wallet.",
    "engines": {
        "node": ">=24.0.0"
    },
    "exports": {
        ".": {
            "browser": {
                "types": "./browser/index.d.ts",
                "import": "./browser/index.js",
                "require": "./browser/index.js",
                "default": "./browser/index.js"
            },
            "node": {
                "types": "./build/index.d.ts",
                "import": "./build/index.js",
                "require": "./build/index.js",
                "default": "./build/index.js"
            },
            "types": "./build/index.d.ts",
            "import": "./build/index.js",
            "require": "./build/index.js",
            "default": "./build/index.js"
        },
        "./browser": {
            "types": "./browser/index.d.ts",
            "import": "./browser/index.js",
            "require": "./browser/index.js",
            "default": "./browser/index.js"
        }
    },
    "browser": {
        "./build/index.d.ts": "./browser/index.d.ts",
        "./build/index.js": "./browser/index.js",
        "Buffer": "buffer",
        "stream": "stream-browserify"
    },
    "homepage": "https://opnet.org",
    "keywords": [
        "opnet",
        "bsi",
        "bsi-binary",
        "bsi-bitcoin-rpc",
        "walletconnect",
        "wallet",
        "connect",
        "bitcoin",
        "btc",
        "bitcoin smart contracts",
        "smart inscriptions",
        "ordinals"
    ],
    "license": "Apache-2.0",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "typings": "build/index.d.ts",
    "module": "build/index.js",
    "publishConfig": {
        "access": "public",
        "tag": "latest"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/btc-vision/walletconnect.git"
    },
    "scripts": {
        "build": "eslint src && tsc && mkdir -p build/utils && cp src/utils/*.css build/utils/",
        "build:browser": "vite build -c vite.config.browser.ts",
        "build:all": "npm run build && npm run build:browser",
        "watch": "tsc --watch",
        "setup": "npm i && npm run build:all",
        "lint": "eslint src",
        "check:circular": "madge --circular --extensions ts,tsx src/",
        "prebuild": "npm run check:circular"
    },
    "peerDependencies": {
        "react": "^19",
        "react-dom": "^19"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/react": "^19.2.7",
        "browserify-zlib": "^0.2.0",
        "crypto-browserify": "^3.12.1",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "madge": "^8.0.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "stream-browserify": "^3.0.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.49.0",
        "vite": "^7.3.0",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-node-polyfills": "^0.23.0"
    },
    "dependencies": {
        "@btc-vision/bitcoin": "^6.5.4",
        "@btc-vision/transaction": "^1.7.31",
        "opnet": "^1.7.35",
        "pako": "^2.1.0"
    }
}
